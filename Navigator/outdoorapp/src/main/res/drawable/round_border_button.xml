<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7E282828" />
            <gradient android:angle="-90" android:startColor="#7C282828" android:endColor="#282828"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#282828" />
            <solid android:color="#282828"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#7A282828" />
            <gradient android:angle="-90" android:startColor="#B4282828" android:endColor="#282828" />
        </shape>
    </item>
</selector>

